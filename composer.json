{
    "name": "ptahdunbar/wp-skeleton-site",
    "homepage": "https://github.com/ptahdunbar/wp-skeleton-site",
    "description": "A WordPress skeleton site.",
    "type": "project",
    "license": "GPL-2.0+",

    "keywords": [
        "WordPress", "plugins", "themes", "php", "skeleton"
    ],

    "authors": [
        {
            "name": "Ptah Dunbar",
            "email": "yarr@piratedunbar.com",
            "homepage": "http://piratedunbar.com"
        }
    ],

    "require": {
        "php": ">=5.3.0",
        "wordpress/wordpress": "3.6",
        "automattic/_s": "~1.0"
    },

    "extra": {
        "installer-paths": {
            "public/wp/": ["type:drupal-module"],
            "public/content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "public/content/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },

    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "wordpress/wordpress",
                "type": "drupal-module",
                "version": "3.6",
                "dist": {
                    "url": "https://github.com/WordPress/WordPress/archive/3.6-branch.zip",
                    "type": "zip"
                },
                "source": {
                    "url": "https://github.com/WordPress/WordPress",
                    "type": "git",
                    "reference": "3.6"
                },
                "require": {
                    "composer/installers": "~1.0"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "automattic/_s",
                "type": "wordpress-theme",
                "version": "1.3",
                "dist": {
                    "url": "https://github.com/Automattic/_s/archive/master.zip",
                    "type": "zip"
                },
                "require": {
                    "composer/installers": "~1.0"
                }
            }
        }
    ]
}
