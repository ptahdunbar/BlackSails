{
    "name": "ptahdunbar/wp-skeleton-site",
    "homepage": "https://github.com/ptahdunbar/wp-skeleton-site",
    "description": "A WordPress skeleton site. -_O",
    "type": "project",
    "license": "GPL-2.0+",

    "keywords": [
        "WordPress", "plugins", "themes", "php", "skeleton"
    ],

    "authors": [
        {
            "name": "Ptah Dunbar",
            "email": "yarr@piratedunbar.com",
            "homepage": "http://piratedunbar.com"
        }
    ],

    "require": {
        "php": ">=5.4",
        "wordpress/wordpress": "3.8",
        "ptahdunbar/wp-skeleton-theme": "dev-master",
        "ptahdunbar/wp-skeleton-plugin": "dev-muplugins"
    },

    "require-dev" : {
        "phing/phing": "2.6.*",
        "robmorgan/phinx": "*"
    },

    "extra": {
        "installer-paths": {
            "public/wp/": ["type:drupal-module"],
            "public/content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "public/content/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },

    "scripts" : {
        "post-create-project-install": "[ -e composer.phar ] && composer.phar update || composer update"
    },

    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "wordpress/wordpress",
                "type": "drupal-module",
                "version": "3.8",
                "dist": {
                    "url": "https://github.com/WordPress/WordPress/archive/3.8-branch.zip",
                    "type": "zip"
                },
                "source": {
                    "url": "https://github.com/WordPress/WordPress",
                    "type": "git",
                    "reference": "3.8"
                },
                "require": {
                    "composer/installers": "~1.0"
                }
            }
        }
    ]
}
